<Page x:Class="Zac_s_Minecraft_Patcher.MVVM.View.DayView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:gif="http://wpfanimatedgif.codeplex.com"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Zac_s_Minecraft_Patcher.MVVM.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.Background>
            <VisualBrush>
                <VisualBrush.Visual>
                    <Image x:Name="dayThemeAnimated" gif:ImageBehavior.AnimatedSource="/Images/dayTheme.gif" 
                           gif:ImageBehavior.AutoStart="True" gif:ImageBehavior.RepeatBehavior="0x"/>
                </VisualBrush.Visual>
            </VisualBrush>
        </Grid.Background>

    </Grid>
</Page>
